    "rollup-plugin-commonjs": "8.2.x",
    "babel-polyfill": "6.26.x",
    "whatwg-fetch": "2.0.x",
    "gulp-uglify": "3.0.x",
    "gulp-uglifyjs": "0.6.x",
    "babel-core": "6.26.x"
